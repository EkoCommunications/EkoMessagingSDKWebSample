{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": "babel-plugin-root-import"
  },
  "globals": {
    "EkoSDKError": true,
    "EkoSDKConnectionError": true,
    "EkoSDKInvalidParameterError": true,
    "logInfo": true,
    "logWarning": true,
    "logError": true,
    "publicLogInfo": true,
    "publicLogWarning": true,
    "publicLogError": true,
    "socketMockServer": true,
    "StorageReturnType": true,
  },
  "rules": {
    "max-len": ["error", 120],
    "arrow-parens": ["error", "as-needed"],
    "class-methods-use-this": 0,
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
    no-multi-spaces: ["error", { ignoreEOLComments: true }],
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "import/extensions": 0,
    "no-prototype-builtins": 0,
  }
}
